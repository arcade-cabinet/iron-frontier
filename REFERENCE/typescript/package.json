{
  "name": "iron-frontier",
  "private": true,
  "version": "0.1.0",
  "description": "A steampunk western RPG",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @iron-frontier/web dev",
    "build": "pnpm --filter @iron-frontier/web build",
    "test": "pnpm -r test",
    "test:web": "pnpm --filter @iron-frontier/web test",
    "test:mobile": "pnpm --filter @iron-frontier/mobile test",
    "test:shared": "pnpm --filter @iron-frontier/shared test",
    "test:ui": "pnpm --filter @iron-frontier/ui test",
    "test:coverage": "pnpm -r test:coverage",
    "test:e2e": "pnpm --filter @iron-frontier/web test:e2e",
    "test:e2e:mobile": "pnpm --filter @iron-frontier/mobile test:e2e",
    "e2e": "pnpm --filter @iron-frontier/web test:e2e",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "dev:mobile": "pnpm --filter @iron-frontier/mobile start",
    "build:android": "pnpm --filter @iron-frontier/mobile build:android",
    "build:ios": "pnpm --filter @iron-frontier/mobile build:ios",
    "docs:dev": "pnpm --filter @iron-frontier/docs dev",
    "docs:build": "pnpm --filter @iron-frontier/docs build",
    "docs:preview": "pnpm --filter @iron-frontier/docs preview",
    "upgrade:all": "pnpm -r update --latest",
    "compile:tiles": "tsx scripts/compile-tiles.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@gltf-transform/core": "^4.1.1",
    "@gltf-transform/extensions": "^4.1.1",
    "@gltf-transform/functions": "^4.1.1",
    "cpy-cli": "^6.0.0",
    "draco3dgltf": "^1.5.7",
    "rimraf": "^6.1.2",
    "sharp": "^0.33.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ],
    "overrides": {
      "@types/three": "0.176.0"
    }
  }
}
