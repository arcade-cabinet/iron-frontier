{
  "name": "@iron-frontier/web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run sync-assets && tsc && vite build",
    "sync-assets": "rsync -av --delete ../../packages/assets/models/ ./public/assets/models/ && rsync -av --delete ../../packages/assets/textures/ ./public/assets/textures/",
    "build:dev": "vite build --mode development",
    "preview": "vite preview --port 8080",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "clean": "rm -rf dist .vite"
  },
