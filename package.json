{
  "name": "iron-frontier",
  "private": true,
  "version": "0.1.0",
  "description": "A steampunk western RPG",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @iron-frontier/web dev",
    "build": "pnpm --filter @iron-frontier/web build",
    "test": "pnpm --filter @iron-frontier/web test",
    "test:all": "pnpm -r test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "dev:mobile": "pnpm --filter @iron-frontier/mobile start",
    "build:android": "pnpm --filter @iron-frontier/mobile build:android",
    "build:ios": "pnpm --filter @iron-frontier/mobile build:ios",
    "docs:dev": "pnpm --filter @iron-frontier/docs dev",
    "docs:build": "pnpm --filter @iron-frontier/docs build",
    "docs:preview": "pnpm --filter @iron-frontier/docs preview",
    "upgrade:all": "pnpm -r update --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "cpy-cli": "^6.0.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ]
  }
}
