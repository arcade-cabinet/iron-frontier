{
  "name": "iron-frontier",
  "private": true,
  "version": "0.1.0",
  "description": "A steampunk western RPG",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @iron-frontier/web dev",
    "build": "pnpm --filter @iron-frontier/web build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:web": "pnpm --filter @iron-frontier/web test",
    "test:mobile": "pnpm --filter @iron-frontier/mobile test",
    "test:shared": "pnpm --filter @iron-frontier/shared test",
    "test:ui": "pnpm --filter @iron-frontier/ui test",
    "test:e2e": "pnpm --filter @iron-frontier/web test:e2e",
    "test:e2e:mobile": "pnpm --filter @iron-frontier/mobile test:e2e",
    "e2e": "pnpm --filter @iron-frontier/web test:e2e",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "dev:mobile": "pnpm --filter @iron-frontier/mobile start",
    "build:android": "pnpm --filter @iron-frontier/mobile build:android",
    "build:ios": "pnpm --filter @iron-frontier/mobile build:ios",
    "docs:dev": "pnpm --filter @iron-frontier/docs dev",
    "docs:build": "pnpm --filter @iron-frontier/docs build",
    "docs:preview": "pnpm --filter @iron-frontier/docs preview",
    "upgrade:all": "pnpm -r update --latest",
    "compile:tiles": "tsx scripts/compile-tiles.ts",
    "expo:start": "expo start",
    "expo:android": "expo start --android",
    "expo:ios": "expo start --ios",
    "expo:web": "expo start --web",
    "expo:export:web": "expo export:web"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@gltf-transform/core": "^4.1.1",
    "@gltf-transform/extensions": "^4.1.1",
    "@gltf-transform/functions": "^4.1.1",
    "@testing-library/react-native": "14.0.0-beta.0",
    "cpy-cli": "^6.0.0",
    "draco3dgltf": "^1.5.7",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.16",
    "playwright": "^1.58.0",
    "rimraf": "^6.1.2",
    "sharp": "^0.33.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ],
    "overrides": {
      "@types/three": "0.176.0"
    }
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "expo": "~54.0.32",
    "expo-asset": "~11.1.7",
    "expo-constants": "^18.0.13",
    "expo-font": "^14.0.11",
    "expo-gl": "~15.0.5",
    "expo-linking": "^8.0.11",
    "expo-router": "~5.0.7",
    "expo-screen-orientation": "^9.0.8",
    "expo-splash-screen": "^31.0.13",
    "expo-sqlite": "^16.0.10",
    "expo-status-bar": "~2.2.3",
    "expo-three": "^8.0.0",
    "nativewind": "^4.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-native": "0.81.4",
    "react-native-reanimated": "^4.2.1",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.21.2",
    "sql.js": "^1.13.0",
    "tailwindcss": "^4.1.18",
    "three": "0.176.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  }
}
